<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- soft shadow layer (radial gradient) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="72dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#110D0084"
                android:endColor="@android:color/transparent" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- transparent outline on top for framing -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#80FFFFFF" />
            <corners android:radius="8dp" />
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp" />
        </shape>
    </item>
</layer-list>
