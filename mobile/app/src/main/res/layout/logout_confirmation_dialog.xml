<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dialog_width_lg"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_background"
        android:orientation="vertical"
        android:padding="@dimen/space_xl">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/league_spartan_bold"
            android:gravity="center"
            android:text="Log Out"
            android:textColor="@color/brand_indigo"
            android:textSize="@dimen/text_h2"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/space_lg" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Are you sure you want to log out?"
            android:textColor="@color/black"
            android:textSize="@dimen/text_md"
            android:layout_marginBottom="@dimen/space_xl" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_min_height"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/space_sm"
                android:backgroundTint="@color/primary_light_sky"
                android:text="CANCEL"
                android:textColor="@color/brand_indigo"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_sm"
                app:cornerRadius="@dimen/button_corner_radius"
                android:elevation="4dp" />

        <Button
                android:id="@+id/btn_logout"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_min_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/space_sm"
                android:backgroundTint="@color/brand_indigo"
                android:text="LOG OUT"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_sm"
                app:cornerRadius="@dimen/button_corner_radius"
                android:elevation="4dp" />
    </LinearLayout>
</LinearLayout>