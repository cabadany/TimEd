<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

    <ImageView
            android:id="@+id/top_wave_animation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wave_height_small"
            android:layout_gravity="top"
            android:contentDescription="@string/content_desc_top_wave"
            android:scaleType="fitXY"
            android:src="@drawable/animated_wave_top" />

    <ImageView
            android:id="@+id/bottom_wave_animation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wave_height_small"
            android:layout_gravity="bottom"
            android:contentDescription="@string/content_desc_bottom_wave"
            android:rotation="180"
            android:scaleType="fitXY"
            android:scaleX="-1"
            android:src="@drawable/animated_wave_bottom"
            android:translationY="1dp" />

    <!-- Back Button -->
    <ImageView
            android:id="@+id/icon_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/space_xs"
            android:layout_marginTop="@dimen/space_xs"
            android:padding="@dimen/space_sm"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/content_desc_back_button"
            app:srcCompat="@drawable/ic_back_button"
            android:background="@drawable/ripple_icon_back_button"
            android:stateListAnimator="@animator/button_scale_animator" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/titleForgot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hero_margin_top"
                android:fontFamily="@font/league_spartan_bold"
                android:letterSpacing="0.05"
                android:padding="@dimen/space_xl"
                android:shadowColor="#803538CD"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"
                android:text="Forgot Password"
                android:textAlignment="center"
                android:textColor="#37474F"
                android:textSize="@dimen/text_title"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/subtitleForgot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2xl"
                android:layout_marginEnd="@dimen/space_2xl"
                android:text="Enter your account email to receive a reset link."
                android:textColor="@color/neutral_text_gray"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/titleForgot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outline_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2xl"
                android:layout_marginTop="@dimen/space_lg"
                android:layout_marginEnd="@dimen/space_2xl"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="#3538CD"
                app:hintTextColor="#3538CD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subtitleForgot"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="#3538CD">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/space_xl"
                    android:textColor="#37474F" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:id="@+id/btnSendReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2xl"
                android:layout_marginTop="@dimen/space_lg"
                android:layout_marginEnd="@dimen/space_2xl"
                android:backgroundTint="#3538CD"
                android:elevation="8dp"
                android:fontFamily="@font/league_spartan_medium"
                android:padding="@dimen/space_xl"
                android:text="Send Reset Link"
                android:textColor="@color/white"
                android:textSize="@dimen/text_md"
                android:textStyle="bold"
                android:translationZ="2dp"
                app:cornerRadius="@dimen/button_corner_radius_pill"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/outline_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
