<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:paddingHorizontal="24dp"
    android:paddingVertical="28dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/ic_success"
        android:contentDescription="@string/popup_success_icon_desc" />

    <TextView
        android:id="@+id/popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Reset Link Sent"
        android:textColor="@color/primary_deep_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/popup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="We've sent a reset link to your email. Check your inbox and follow the instructions."
        android:textColor="@color/neutral_text_gray"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/popup_close_button"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/brand_indigo"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        app:cornerRadius="8dp"
        android:elevation="4dp" />

</LinearLayout>
