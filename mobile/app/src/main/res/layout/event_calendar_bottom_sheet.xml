<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingBottom="@dimen/space_lg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Header Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/space_xs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_lg">

            <TextView
                android:id="@+id/text_calendar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_calendar_title"
                android:textSize="@dimen/text_xl"
                android:textStyle="bold"
                android:textColor="@color/primary_deep_blue"
                android:fontFamily="@font/league_spartan_bold"
                android:letterSpacing="0.02"
                android:layout_marginBottom="@dimen/space_md"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_prev_month"
                    android:layout_width="@dimen/toolbar_icon_lg"
                    android:layout_height="@dimen/toolbar_icon_lg"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Previous Month"
                    android:padding="@dimen/space_xs"
                    android:src="@drawable/ic_chevron_left"
                    app:tint="@color/primary_medium_blue" />

                <TextView
                    android:id="@+id/text_month_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_sm"
                    android:fontFamily="@font/league_spartan_bold"
                    android:text="October"
                    android:textColor="@color/primary_deep_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_next_month"
                    android:layout_width="@dimen/toolbar_icon_lg"
                    android:layout_height="@dimen/toolbar_icon_lg"
                    android:layout_marginStart="@dimen/space_sm"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Next Month"
                    android:padding="@dimen/space_xs"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/primary_medium_blue" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Year TextView Button -->
                <TextView
                    android:id="@+id/btn_select_year"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_calendar_year_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="2025 â–¼"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Calendar Toggle -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_md"
        android:layout_marginEnd="@dimen/space_md"
        android:layout_marginBottom="@dimen/space_md"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/calendar_toggle_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_sm"
            app:singleSelection="true"
            app:checkedButton="@id/btn_toggle_events">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_toggle_events"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_xs"
                android:layout_weight="1"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:text="@string/calendar_toggle_events"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_toggle_attendance"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:text="@string/calendar_toggle_attendance"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

        </com.google.android.material.button.MaterialButtonToggleGroup>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_event_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Calendar Grid Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_marginEnd="@dimen/space_md"
            android:layout_marginBottom="@dimen/space_md"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_md">

                <GridLayout
                    android:id="@+id/calendar_day_headers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:paddingTop="@dimen/space_xs"
                    android:paddingBottom="@dimen/space_xs"
                    android:useDefaultMargins="false">
                    <!-- Day of week headers added dynamically -->
                </GridLayout>

                <GridLayout
                    android:id="@+id/calendar_day_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:rowCount="6"
                    android:useDefaultMargins="false"
                    android:paddingBottom="@dimen/space_sm" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Event Status Legend Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_marginEnd="@dimen/space_md"
            android:layout_marginBottom="@dimen/space_md"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <TextView
                    android:id="@+id/attendance_legend_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Status Legend"
                    android:textSize="@dimen/text_md"
                    android:textStyle="bold"
                    android:fontFamily="@font/league_spartan_bold"
                    android:layout_marginBottom="@dimen/space_sm"
                    android:textColor="@color/primary_deep_blue" />

                <LinearLayout
                    android:id="@+id/attendance_legend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dot_attendance_late" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_xs"
                            android:text="Upcoming"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/neutral_text_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dot_attendance_present" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_xs"
                            android:text="Ongoing"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/neutral_text_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dot_attendance_absent" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_xs"
                            android:text="Ended"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/neutral_text_gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Events List Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_marginEnd="@dimen/space_md"
            android:layout_marginBottom="@dimen/space_md"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <TextView
                    android:id="@+id/text_selected_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calendar_select_date_prompt"
                    android:textColor="@color/primary_deep_blue"
                    android:textSize="@dimen/text_md"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/space_sm" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_calendar_events"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:overScrollMode="ifContentScrolls" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_attendance_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Attendance Calendar Grid Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_marginEnd="@dimen/space_md"
            android:layout_marginBottom="@dimen/space_md"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_md">

                <GridLayout
                    android:id="@+id/attendance_day_headers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:paddingTop="@dimen/space_xs"
                    android:paddingBottom="@dimen/space_xs"
                    android:useDefaultMargins="false" />

                <GridLayout
                    android:id="@+id/attendance_day_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:rowCount="6"
                    android:useDefaultMargins="false"
                    android:paddingBottom="@dimen/space_sm" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Attendance Legend Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_marginEnd="@dimen/space_md"
            android:layout_marginBottom="@dimen/space_md"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attendance Status Legend"
                    android:textSize="@dimen/text_md"
                    android:textStyle="bold"
                    android:fontFamily="@font/league_spartan_bold"
                    android:layout_marginBottom="@dimen/space_sm"
                    android:textColor="@color/primary_deep_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dot_attendance_present" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_xs"
                            android:text="On Time"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/neutral_text_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dot_attendance_late" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_xs"
                            android:text="Late"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/neutral_text_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dot_attendance_absent" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_xs"
                            android:text="Absent"
                            android:textSize="@dimen/text_sm"
                            android:textColor="@color/neutral_text_gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Attendance Statistics Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_marginEnd="@dimen/space_md"
            android:layout_marginBottom="@dimen/space_md"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_lg">

                <TextView
                    android:id="@+id/text_attendance_statistics_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/attendance_statistics_title"
                    android:textColor="@color/primary_deep_blue"
                    android:textSize="@dimen/text_md"
                    android:textStyle="bold" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_attendance_monthly"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="@dimen/space_md" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dot_attendance_present" />

                        <TextView
                            android:id="@+id/text_attendance_present_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_xs"
                            android:textColor="@color/neutral_text_gray"
                            android:textSize="@dimen/text_sm"
                            tools:text="On Time: 0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dot_attendance_late" />

                        <TextView
                            android:id="@+id/text_attendance_late_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_xs"
                            android:textColor="@color/neutral_text_gray"
                            android:textSize="@dimen/text_sm"
                            tools:text="Late: 0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dot_attendance_absent" />

                        <TextView
                            android:id="@+id/text_attendance_absent_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_xs"
                            android:textColor="@color/neutral_text_gray"
                            android:textSize="@dimen/text_sm"
                            tools:text="Absent: 0" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>

</androidx.core.widget.NestedScrollView>