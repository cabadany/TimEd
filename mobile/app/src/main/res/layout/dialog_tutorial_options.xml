<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/dialog_background">

    <TextView
            android:id="@+id/dialog_tutorial_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interactive Guide"
            android:textSize="20sp"
            android:textColor="#37474F"
            android:fontFamily="@font/league_spartan_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

    <LinearLayout
            android:id="@+id/layout_quick_tour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

        <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_quick_tour"
                app:tint="#3538CD"
                android:layout_marginEnd="16dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Tour"
                android:textSize="17sp"
                android:textColor="#37474F"
                android:fontFamily="@font/league_spartan_medium"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_attendance_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

        <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_qr_scanner"
                app:tint="#3538CD"
                android:layout_marginEnd="16dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance Workflow Guide"
                android:textSize="17sp"
                android:textColor="#37474F"
                android:fontFamily="@font/league_spartan_medium"/>
    </LinearLayout>

    <Button
            android:id="@+id/btn_cancel_tutorial_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#3538CD"
            android:background="?attr/selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/league_spartan_bold"
            android:layout_gravity="end"
            android:layout_marginTop="20dp" />

</LinearLayout>