<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Success Icon -->
    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/ic_success"
        android:contentDescription="Success" />

    <!-- Title -->
    <TextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Profile Updated"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/popup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Your profile has been successfully updated."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <!-- Close Button -->
    <Button
        android:id="@+id/popup_close_button"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/yellow_gold"
        android:fontFamily="@font/roboto_bold"
        android:text="OK"
        android:textColor="#8B0000"
        android:textSize="16sp"
        app:cornerRadius="8dp" />

</LinearLayout>