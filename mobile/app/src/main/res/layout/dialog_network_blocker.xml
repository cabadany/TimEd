<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_background"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="32dp"
        android:gravity="center_horizontal">

    <!-- Warning Icon -->
    <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/ic_warning"
            android:contentDescription="@string/popup_warning_icon_desc" />

    <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/popup_title_network_requirement"
            android:textColor="@color/primary_deep_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginBottom="16dp" />

    <TextView
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/popup_message_network_placeholder"
            android:textColor="@color/neutral_text_gray"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="24dp" />

    <!-- Button to go to Settings -->
    <Button
            android:id="@+id/dialog_button_settings"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:backgroundTint="#3538CD"
            android:text="@string/popup_button_go_to_settings"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            app:cornerRadius="8dp"
            android:elevation="4dp" />

</LinearLayout>