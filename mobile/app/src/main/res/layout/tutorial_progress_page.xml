<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_gray"
        tools:context=".TutorialProgressActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_tutorial_progress"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_deep_blue"
            app:title="Tutorial Progress"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_back_button"
            app:navigationIconTint="@android:color/white"
            android:elevation="4dp"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/space_lg"
                android:paddingEnd="@dimen/space_lg"
                android:paddingTop="@dimen/space_md"
                android:paddingBottom="@dimen/space_lg">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Tutorial Progress"
                    android:textSize="@dimen/text_xl"
                    android:textStyle="bold"
                    android:textColor="@color/primary_deep_blue"
                    android:fontFamily="@font/league_spartan_bold"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="@dimen/space_md"
                    android:layout_marginBottom="@dimen/space_lg"
                    android:layout_gravity="center_horizontal"/>

            <androidx.cardview.widget.CardView
                    android:id="@+id/card_quick_tour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:layout_marginBottom="@dimen/space_md"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@animator/button_scale_animator">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/space_lg">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <!-- Icon with circular background -->
                        <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="@dimen/space_md"
                                android:background="@drawable/bg_icon_circle">
                            
                            <ImageView
                                    android:id="@+id/ic_quick_tour"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_info"
                                    app:tint="@color/primary_deep_blue"
                                    android:contentDescription="Tutorial icon"/>
                        </FrameLayout>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quick Tour"
                                    android:textColor="@color/primary_deep_blue"
                                    android:textSize="@dimen/text_lg"
                                    android:fontFamily="@font/league_spartan_bold"
                                    android:textStyle="bold"/>
                            
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Learn the basics of the app"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/text_sm"
                                    android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <TextView
                                android:id="@+id/tv_quick_tour_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Completed"
                                android:text="Not Started"
                                android:background="@drawable/bg_status_not_started"
                                android:textColor="@color/neutral_text_gray"
                                android:textSize="12sp"
                                android:fontFamily="@font/league_spartan_medium"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <ProgressBar
                            android:id="@+id/pb_quick_tour"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="@dimen/space_md"
                            android:max="100"
                            tools:progress="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/bg_progress_bar_gradient"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/card_attendance_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:layout_marginBottom="@dimen/space_md"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@animator/button_scale_animator">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/space_lg">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <!-- Icon with circular background -->
                        <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="@dimen/space_md"
                                android:background="@drawable/bg_icon_circle">
                            
                            <ImageView
                                    android:id="@+id/ic_attendance_guide"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_calendar_outline"
                                    app:tint="@color/primary_deep_blue"
                                    android:contentDescription="Attendance guide icon"/>
                        </FrameLayout>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Attendance Workflow"
                                    android:textColor="@color/primary_deep_blue"
                                    android:textSize="@dimen/text_lg"
                                    android:fontFamily="@font/league_spartan_bold"
                                    android:textStyle="bold"/>
                            
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Master time-in and time-out"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/text_sm"
                                    android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <TextView
                                android:id="@+id/tv_attendance_guide_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="In Progress"
                                android:text="Not Started"
                                android:background="@drawable/bg_status_not_started"
                                android:textColor="@color/neutral_text_gray"
                                android:textSize="12sp"
                                android:fontFamily="@font/league_spartan_medium"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <ProgressBar
                            android:id="@+id/pb_attendance_guide"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="@dimen/space_md"
                            android:max="100"
                            tools:progress="50"
                            android:progress="0"
                            android:progressDrawable="@drawable/bg_progress_bar_gradient"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/card_event_tutorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:layout_marginBottom="@dimen/space_md"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@animator/button_scale_animator">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/space_lg">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <!-- Icon with circular background -->
                        <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="@dimen/space_md"
                                android:background="@drawable/bg_icon_circle">
                            
                            <ImageView
                                    android:id="@+id/ic_event_tutorial"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="@color/primary_deep_blue"
                                    android:contentDescription="Event tutorial icon"/>
                        </FrameLayout>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Event Attendance"
                                    android:textColor="@color/primary_deep_blue"
                                    android:textSize="@dimen/text_lg"
                                    android:fontFamily="@font/league_spartan_bold"
                                    android:textStyle="bold"/>
                            
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Join and track event attendance"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/text_sm"
                                    android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <TextView
                                android:id="@+id/tv_event_tutorial_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="In Progress"
                                android:text="Not Started"
                                android:background="@drawable/bg_status_not_started"
                                android:textColor="@color/neutral_text_gray"
                                android:textSize="12sp"
                                android:fontFamily="@font/league_spartan_medium"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <ProgressBar
                            android:id="@+id/pb_event_tutorial"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="@dimen/space_md"
                            android:max="100"
                            tools:progress="50"
                            android:progress="0"
                            android:progressDrawable="@drawable/bg_progress_bar_gradient"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/tv_no_active_tutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No active tutorial at the moment."
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/text_md"
                    android:textStyle="italic"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginTop="@dimen/space_xl"
                    android:layout_marginBottom="@dimen/space_lg"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>