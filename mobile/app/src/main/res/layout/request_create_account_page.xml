<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

    <ImageView
            android:id="@+id/top_wave_animation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wave_height_small"
            android:layout_gravity="top"
            android:contentDescription="@string/content_desc_top_wave"
            android:scaleType="fitXY"
            android:src="@drawable/animated_wave_top" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <TextView
                android:id="@+id/titleCreateAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hero_margin_top"
                android:fontFamily="@font/league_spartan_bold"
                android:letterSpacing="0.05"
                android:padding="@dimen/space_xl"
                android:shadowColor="#803538CD"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"
                android:text="Create Account"
                android:textAlignment="center"
                android:textColor="#37474F"
                android:textSize="@dimen/text_title"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <!-- Full Name -->
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outline_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2xl"
                android:layout_marginEnd="@dimen/space_2xl"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/brand_indigo"
                app:hintTextColor="@color/brand_indigo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleCreateAccount"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/brand_indigo">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/space_xl"
                    android:textColor="#37474F" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ID Number -->
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outline_idnumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2xl"
                android:layout_marginTop="@dimen/space_md"
                android:layout_marginEnd="@dimen/space_2xl"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/brand_indigo"
                app:hintTextColor="@color/brand_indigo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/outline_name"
                app:startIconDrawable="@drawable/ic_badge"
                app:startIconTint="@color/brand_indigo">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_idnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID Number"
                    android:inputType="text"
                    android:padding="@dimen/space_xl"
                    android:textColor="#37474F" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outline_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2xl"
                android:layout_marginTop="@dimen/space_md"
                android:layout_marginEnd="@dimen/space_2xl"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/brand_indigo"
                app:hintTextColor="@color/brand_indigo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/outline_idnumber"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/brand_indigo">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/space_xl"
                    android:textColor="#37474F" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Department -->
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outline_department"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2xl"
                android:layout_marginTop="@dimen/space_md"
                android:layout_marginEnd="@dimen/space_2xl"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/brand_indigo"
                app:hintTextColor="@color/brand_indigo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/outline_email"
                app:startIconDrawable="@drawable/ic_department"
                app:startIconTint="@color/brand_indigo">

            <AutoCompleteTextView
                    android:id="@+id/input_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Department"
                    android:inputType="none"
                    android:padding="@dimen/space_xl"
                    android:textColor="#37474F"
                    android:focusable="false"
                    android:clickable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outline_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2xl"
                android:layout_marginTop="@dimen/space_md"
                android:layout_marginEnd="@dimen/space_2xl"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/brand_indigo"
                app:hintTextColor="@color/brand_indigo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/outline_department"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/brand_indigo"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/brand_indigo">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="@dimen/space_xl"
                    android:textColor="#37474F" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
                android:id="@+id/password_requirements_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2xl"
                android:layout_marginTop="@dimen/space_md"
                android:layout_marginEnd="@dimen/space_2xl"
                android:background="@drawable/password_requirements_card"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="@dimen/space_lg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/outline_password">

            <TextView
                    android:id="@+id/password_strength_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strength: Weak"
                    android:textColor="@color/error_red"
                    android:textSize="@dimen/text_sm"
                    android:fontFamily="@font/roboto_medium" />

            <ProgressBar
                    android:id="@+id/password_strength_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="@dimen/space_xs"
                    android:max="100"
                    android:progress="0" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:text="Password must contain:"
                    android:textColor="@color/neutral_text_gray"
                    android:textSize="@dimen/text_sm"
                    android:fontFamily="@font/roboto_medium" />

            <LinearLayout
                    android:id="@+id/password_requirement_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_sm"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/password_requirement_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_warning" />

                <TextView
                        android:id="@+id/password_requirement_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_sm"
                        android:layout_weight="1"
                        android:text="At least 6 characters"
                        android:textColor="@color/neutral_text_gray"
                        android:textSize="@dimen/text_sm"
                        android:fontFamily="@font/roboto_medium" />
            </LinearLayout>

        </LinearLayout>

        <Button
                android:id="@+id/btnSubmitAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2xl"
                android:layout_marginTop="@dimen/space_lg"
                android:layout_marginEnd="@dimen/space_2xl"
                android:layout_marginBottom="@dimen/space_2xl"
                android:backgroundTint="@color/brand_indigo"
                android:elevation="8dp"
                android:fontFamily="@font/league_spartan_medium"
                android:padding="@dimen/space_xl"
                android:text="Submit Request"
                android:textColor="@color/white"
                android:textSize="@dimen/text_md"
                android:textStyle="bold"
                android:translationZ="2dp"
                app:cornerRadius="@dimen/button_corner_radius_pill"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password_requirements_container" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Back Button - Moved to the end to be drawn on top -->
    <ImageView
            android:id="@+id/icon_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_lg"
            android:layout_marginTop="@dimen/space_lg"
            android:background="@drawable/ripple_icon_back_button"
            android:clickable="true"
            android:contentDescription="@string/content_desc_back_button"
            android:focusable="true"
            android:padding="@dimen/space_sm"
            android:stateListAnimator="@animator/button_scale_animator"
            app:srcCompat="@drawable/ic_back_button" />

    <!-- Help Button -->
    <ImageButton
            android:id="@+id/btn_help_guidance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="@dimen/space_lg"
            android:layout_marginEnd="@dimen/space_lg"
            android:background="@drawable/ripple_icon_back_button"
            android:src="@drawable/ic_info"
            android:contentDescription="Show registration guide"
            android:padding="@dimen/space_sm"
            android:clickable="true"
            android:focusable="true"/>

    <!-- Guidance Overlay -->
    <FrameLayout
            android:id="@+id/guidance_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true" />

</FrameLayout>