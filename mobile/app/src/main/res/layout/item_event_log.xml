<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="8dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="4dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Event Name -->
        <TextView
                android:id="@+id/text_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="16sp"
                android:textStyle="bold" />

        <!-- Time-In Timestamp -->
        <TextView
                android:id="@+id/text_time_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time-In: 2025-05-19 08:34"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        <!-- Method + Status Row -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

            <!-- Check-in Method Chip -->
            <TextView
                    android:id="@+id/text_method_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="QR Scan"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/league_spartan_medium"
                    android:background="@drawable/bg_chip_neutral" />

            <!-- Flexible spacer to push status to the right -->
            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            <!-- Status -->
            <TextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Havenâ€™t Timed-Out"
                    android:textSize="14sp"
                    android:textColor="#FF0000" />
        </LinearLayout>

        <!-- Time-Out Button (Visible only if not yet timed out) -->
        <Button
                android:id="@+id/button_time_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Out"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:backgroundTint="#3538CD"
                android:textColor="@color/white"
                android:fontFamily="@font/league_spartan_medium" />

    </LinearLayout>
</androidx.cardview.widget.CardView>