<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top wave -->
    <ImageView
        android:id="@+id/top_wave_animation"
        android:layout_width="450dp"
        android:layout_height="380dp"
        android:scaleType="fitXY"
        android:src="@drawable/animated_wave_top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- ScrollView for attendance content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_wave_animation"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title -->
            <TextView
                android:id="@+id/attendance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/league_spartan_bold"
                android:text="Attendance Sheet"
                android:textSize="32sp"
                android:textColor="@color/maroon"
                android:shadowColor="#33000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layout_gravity="center"
                android:paddingBottom="16dp" />

            <!-- Daily Logs Section -->
            <TextView
                android:text="ðŸ—“ Daily Attendance Logs"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/daily_log_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#DDDDDD" />

            <!-- Event Logs Section -->
            <TextView
                android:text="ðŸŽ‰ Event Attendance Logs"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/event_log_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <!-- Back Button -->
    <ImageView
        android:id="@+id/icon_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Back button"
        app:srcCompat="@drawable/ic_back_button" />
</RelativeLayout>