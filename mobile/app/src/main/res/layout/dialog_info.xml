<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_lg"
    android:maxWidth="400dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_xl">

        <!-- Icon -->
        <ImageView
            android:id="@+id/info_dialog_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_info"
            app:tint="@color/brand_indigo"
            android:contentDescription="Info icon"
            android:layout_marginBottom="@dimen/space_lg" />

        <!-- Title -->
        <TextView
            android:id="@+id/info_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_deep_blue"
            android:fontFamily="@font/league_spartan_bold"
            android:letterSpacing="0.02"
            android:gravity="center"
            android:layout_marginBottom="@dimen/space_sm" />

        <!-- Message -->
        <TextView
            android:id="@+id/info_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_marginEnd="@dimen/space_md"
            android:text="This is an information message"
            android:textSize="@dimen/text_md"
            android:textColor="@color/neutral_text_gray"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/space_xl" />

        <!-- OK Button -->
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_compact"
            android:text="OK"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_md"
            android:backgroundTint="@color/brand_indigo"
            app:cornerRadius="@dimen/button_corner_radius"
            android:minWidth="200dp"
            android:stateListAnimator="@animator/button_scale_animator" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
