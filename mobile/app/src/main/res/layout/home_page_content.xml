<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brand_indigo"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Home"
            app:titleTextColor="@android:color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="96dp"
                android:background="@color/white">

                <!-- Top Wave -->
                <ImageView
                    android:id="@+id/top_wave_animation"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/animated_wave_top" />

                <!-- Greeting Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/greeting_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_alignTop="@id/top_wave_animation"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_user_avatar"
                            android:background="@drawable/circle_background"
                            android:padding="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/greeting_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hi, User ðŸ‘‹"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/brand_indigo" />

                            <TextView
                                android:id="@+id/home_greeting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID: 123456 â€¢ CITE"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Filter Buttons -->
                <LinearLayout
                    android:id="@+id/filter_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/greeting_card"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/filter_button_background"
                    android:padding="8dp"
                    android:elevation="2dp">

                    <Button
                        android:id="@+id/btn_filter_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:textSize="14sp"
                        android:textColor="@color/brand_indigo"
                        android:backgroundTint="@color/white" />

                    <Button
                        android:id="@+id/btn_filter_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:textColor="@color/brand_indigo"
                        android:backgroundTint="@color/white" />

                    <Button
                        android:id="@+id/btn_filter_ongoing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ongoing"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:textColor="@color/brand_indigo"
                        android:backgroundTint="@color/white" />

                    <Button
                        android:id="@+id/btn_filter_ended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ended"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:textColor="@color/brand_indigo"
                        android:backgroundTint="@color/white" />
                </LinearLayout>

                <!-- Event List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_events"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filter_buttons"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    tools:listitem="@layout/event_card" />

                <!-- Attendance Prompt -->
                <TextView
                    android:id="@+id/attendance_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recycler_events"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="Mark your attendance for today:"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <!-- Time In -->
                <Button
                    android:id="@+id/btntime_in"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/attendance_prompt"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="48dp"
                    android:backgroundTint="@color/primary_light_sky"
                    android:elevation="6dp"
                    android:text="Time - In"
                    android:textColor="@color/brand_indigo"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp" />

                <!-- Time Out -->
                <Button
                    android:id="@+id/btntime_out"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/btntime_in"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="48dp"
                    android:backgroundTint="@color/brand_indigo"
                    android:elevation="6dp"
                    android:text="Time - Out"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp" />

                <!-- Excuse Letter -->
                <TextView
                    android:id="@+id/excuse_letter_text_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btntime_out"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:text="Send a Excuse Letter"
                    android:textColor="@color/brand_indigo"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/nav_drawer_gradient"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/nav_item_icon_tint_selector"
        app:itemTextColor="@color/nav_item_text_color_selector"
        app:itemBackground="@drawable/nav_item_active_background"
        app:itemIconPadding="@dimen/space_lg"
        app:itemVerticalPadding="@dimen/space_md"
        app:itemHorizontalPadding="@dimen/space_lg"
        app:itemShapeFillColor="@color/primary_light_sky"
        app:itemShapeInsetStart="@dimen/space_md"
        app:itemShapeInsetEnd="@dimen/space_md" />
</androidx.drawerlayout.widget.DrawerLayout>