<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <!-- Top wave -->
    <ImageView
            android:id="@+id/top_wave_animation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wave_max_height"
            android:scaleType="fitXY"
            android:src="@drawable/animated_wave_top" />

    <!-- Back Button -->
    <ImageView
            android:id="@+id/icon_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/space_xs"
            android:layout_marginTop="@dimen/space_xs"
            android:background="@drawable/ripple_icon_back_button"
            android:clickable="true"
            android:contentDescription="Back"
            android:focusable="true"
            android:padding="@dimen/space_md"
            android:stateListAnimator="@animator/button_scale_animator"
            app:srcCompat="@drawable/ic_back_button" />

    <!-- Title -->
    <TextView
            android:id="@+id/excuse_letter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_2xl"
            android:fontFamily="@font/league_spartan_bold"
            android:letterSpacing="0.05"
            android:padding="@dimen/space_sm"
            android:shadowColor="#33000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Excuse Letter"
            android:textColor="#37474F"
            android:textSize="@dimen/text_display"
            android:textStyle="bold" />

    <!-- Form Container -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/excuse_letter_title"
            android:layout_marginTop="@dimen/space_lg"
            android:layout_marginBottom="@dimen/space_xl"
            android:fillViewport="true"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/space_xl"
                android:paddingBottom="@dimen/space_xl">

            <!-- Date Field Label -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_lg"
                    android:fontFamily="@font/league_spartan_bold"
                    android:text="Date of Absence"
                    android:textColor="#37474F"
                    android:textSize="@dimen/text_md" />

            <!-- Date Selection Button -->
            <Button
                    android:id="@+id/btn_date_picker"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:fontFamily="@font/league_spartan_medium"
                    android:gravity="start|center_vertical"
                    android:padding="@dimen/space_lg"
                    android:text="Select date"
                    android:textAllCaps="false"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/text_md"
                    app:cornerRadius="8dp"
                    app:drawableTint="#3538CD"
                    app:strokeColor="@color/medium_gray"
                    app:strokeWidth="1dp" />

            <!-- Number of Days Absent Label -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_xl"
                    android:fontFamily="@font/league_spartan_bold"
                    android:text="Number of Days Absent"
                    android:textColor="#37474F"
                    android:textSize="@dimen/text_md" />

            <!-- Number of Days Absent Input -->
            <EditText
                    android:id="@+id/edit_text_days_absent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/league_spartan_medium"
                    android:hint="e.g., 1, 2, 3"
                    android:inputType="number"
                    android:padding="@dimen/space_lg"
                    android:textColor="#37474F"
                    android:textColorHint="@color/medium_gray"
                    android:textSize="@dimen/text_md" />

            <!-- Reason Label -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_xl"
                    android:fontFamily="@font/league_spartan_bold"
                    android:text="Reason for Absence"
                    android:textColor="#37474F"
                    android:textSize="@dimen/text_md" />

            <!-- Reason Dropdown -->
            <Spinner
                    android:id="@+id/spinner_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:background="@drawable/spinner_background"
                    android:minHeight="@dimen/button_min_height"
                    android:padding="@dimen/space_lg"
                    android:spinnerMode="dropdown" />

            <!-- Details Label -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_xl"
                    android:fontFamily="@font/league_spartan_bold"
                    android:text="Additional Details"
                    android:textColor="#37474F"
                    android:textSize="@dimen/text_md" />

            <!-- Details Input -->
            <EditText
                    android:id="@+id/edit_text_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/multiline_box_height"
                    android:layout_marginTop="@dimen/space_md"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/league_spartan_medium"
                    android:gravity="top|start"
                    android:hint="Please provide additional details..."
                    android:inputType="textMultiLine"
                    android:padding="@dimen/space_lg"
                    android:textColor="#37474F"
                    android:textColorHint="@color/medium_gray"
                    android:textSize="@dimen/text_md" />

            <!-- Upload Proof Label -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_xl"
                    android:fontFamily="@font/league_spartan_bold"
                    android:text="Upload Supporting Document (Optional)"
                    android:textColor="#37474F"
                    android:textSize="@dimen/text_md" />

            <!-- Upload Button -->
            <Button
                    android:id="@+id/btn_upload"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_upload"
                    android:fontFamily="@font/league_spartan_medium"
                    android:gravity="start|center_vertical"
                    android:padding="@dimen/space_lg"
                    android:text="Upload document"
                    android:textAllCaps="false"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/text_md"
                    app:cornerRadius="8dp"
                    app:drawableTint="#3538CD"
                    app:strokeColor="@color/medium_gray"
                    app:strokeWidth="1dp" />

            <!-- Selected file name -->
            <TextView
                    android:id="@+id/text_uploaded_filename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:ellipsize="middle"
                    android:fontFamily="@font/league_spartan_medium"
                    android:singleLine="true"
                    android:textColor="#3538CD"
                    android:textSize="@dimen/text_sm"
                    android:visibility="gone" />

            <!-- Document Preview Card -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/document_preview_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/space_md">

                    <!-- Image Preview (for image files) -->
                    <ImageView
                            android:id="@+id/image_preview"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:background="@drawable/edittext_background"
                            android:contentDescription="Document Preview"
                            android:scaleType="centerInside"
                            android:visibility="gone" />

                    <!-- File Type Preview (for non-image files like PDFs) -->
                    <LinearLayout
                            android:id="@+id/file_type_preview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_sm"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/space_lg"
                            android:visibility="gone">

                        <ImageView
                                android:id="@+id/file_type_icon"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_document"
                                app:tint="#3538CD" />

                        <TextView
                                android:id="@+id/file_type_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_sm"
                                android:fontFamily="@font/league_spartan_bold"
                                android:text="PDF Document"
                                android:textColor="#37474F"
                                android:textSize="@dimen/text_md" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_xs"
                                android:fontFamily="@font/league_spartan_medium"
                                android:text="Tap Preview to view"
                                android:textColor="@color/medium_gray"
                                android:textSize="@dimen/text_sm" />
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_md"
                            android:gravity="center"
                            android:orientation="horizontal">

                        <!-- Preview Button -->
                        <Button
                                android:id="@+id/btn_preview_document"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/space_sm"
                                android:layout_weight="1"
                                android:background="@drawable/bg_button_preview"
                                android:drawableStart="@drawable/ic_preview"
                                android:drawablePadding="@dimen/space_xs"
                                android:fontFamily="@font/league_spartan_medium"
                                android:padding="@dimen/space_md"
                                android:text="Preview"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_sm"
                                app:drawableTint="@color/white" />

                        <!-- Remove Button -->
                        <Button
                                android:id="@+id/btn_remove_document"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/space_sm"
                                android:layout_weight="1"
                                android:background="@drawable/bg_button_remove"
                                android:drawableStart="@drawable/ic_delete"
                                android:drawablePadding="@dimen/space_xs"
                                android:fontFamily="@font/league_spartan_medium"
                                android:padding="@dimen/space_md"
                                android:text="Remove"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_sm"
                                app:drawableTint="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Submit Button -->
            <Button
                    android:id="@+id/btn_submit_excuse"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_min_height"
                    android:layout_marginTop="@dimen/space_2xl"
                    android:backgroundTint="#3538CD"
                    android:elevation="6dp"
                    android:fontFamily="@font/league_spartan_bold"
                    android:text="Submit Excuse"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_md"
                    android:textStyle="bold"
                    app:cornerRadius="@dimen/button_corner_radius" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>