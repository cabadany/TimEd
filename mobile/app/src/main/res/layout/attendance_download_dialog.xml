<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dialog_width_xl"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/space_xl">

    <ImageView
            android:id="@+id/download_icon"
            android:layout_width="@dimen/popup_icon_size_sm"
            android:layout_height="@dimen/popup_icon_size_sm"
            android:layout_marginBottom="@dimen/space_lg"
            android:contentDescription="Download PDF"
            app:srcCompat="@drawable/ic_download_file"
            app:tint="#3538CD" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_md"
            android:fontFamily="@font/league_spartan_bold"
            android:gravity="center"
            android:text="Download Attendance"
            android:textColor="#37474F"
            android:textSize="@dimen/text_xl" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xl"
            android:fontFamily="@font/league_spartan_medium"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/space_xs"
            android:text="Do you want to generate and download the attendance sheet as a PDF file?"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/text_md" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_no"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_min_height"
                android:layout_marginEnd="@dimen/space_sm"
                android:layout_weight="1"
                android:fontFamily="@font/league_spartan_bold"
                android:text="Cancel"
                android:textColor="#3538CD"
                android:textSize="@dimen/text_sm"
                app:cornerRadius="@dimen/button_corner_radius"
                app:strokeColor="#3538CD" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_yes"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_min_height"
                android:layout_marginStart="@dimen/space_sm"
                android:layout_weight="1"
                android:backgroundTint="#3538CD"
                android:fontFamily="@font/league_spartan_bold"
                android:text="Download"
                android:textColor="@color/white"
                android:textSize="@dimen/text_sm"
                app:cornerRadius="@dimen/button_corner_radius" />
    </LinearLayout>
</LinearLayout>