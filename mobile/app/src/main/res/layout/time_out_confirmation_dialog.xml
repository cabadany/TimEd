<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_background"
        android:orientation="vertical"
        android:padding="24dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dialog_title_time_out"
            android:textColor="@color/primary_deep_blue"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginBottom="24dp" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dialog_message_time_out_confirm"
            android:textColor="@color/neutral_text_gray"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="32dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <Button
                android:id="@+id/btn_no"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:text="@string/button_no"
                android:textColor="@color/primary_medium_blue"
                app:strokeColor="@color/primary_medium_blue"
                app:cornerRadius="8dp"/>

        <Button
                android:id="@+id/btn_yes"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/accent_coral"
                android:text="@string/button_yes"
                android:textColor="@color/white"
                app:cornerRadius="8dp"/>
    </LinearLayout>
</LinearLayout>