<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:padding="24dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/league_spartan_bold"
            android:gravity="center"
            android:text="@string/dialog_title_time_out"
            android:textColor="#37474F"
            android:textSize="22sp"
            android:textStyle="bold" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/league_spartan_medium"
            android:gravity="center"
            android:text="@string/dialog_message_time_out_confirm"
            android:textColor="@color/medium_gray"
            android:textSize="16sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_yes"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#3538CD"
                android:fontFamily="@font/league_spartan_bold"
                android:text="@string/button_yes"
                android:textColor="@color/white"
                app:cornerRadius="12dp" />

        <Button
                android:id="@+id/btn_no"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:fontFamily="@font/league_spartan_bold"
                android:text="@string/button_no"
                android:textColor="#3538CD"
                app:cornerRadius="12dp"
                app:strokeColor="#3538CD" />
    </LinearLayout>
</LinearLayout>