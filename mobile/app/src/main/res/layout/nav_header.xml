<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <com.example.timed_mobile.ui.LavaLampView
            android:id="@+id/lava_lamp_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cornerRadius="0dp"
            app:roundBottomCorners="false" />

    <LinearLayout
            android:id="@+id/existing_nav_content_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"

            android:clipToPadding="false">

        <ImageView
                android:id="@+id/sidebar_profile_image"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_profile"
                android:scaleType="centerCrop"
                android:padding="4dp"
                android:background="@drawable/circle_outline_shadow" />

        <TextView
                android:id="@+id/sidebar_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:letterSpacing="0.02"
                android:shadowColor="#660D0084"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="6" />

        <TextView
                android:id="@+id/sidebar_user_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID â€¢ Department"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.9"
                android:shadowColor="#660D0084"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="6" />

        <TextView
                android:id="@+id/sidebar_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@example.com"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:alpha="0.85"
                android:shadowColor="#660D0084"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="6" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/tutorial_progress_on_right_nav_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="end"
            android:visibility="visible"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/header_content_shadow"
            android:clipToPadding="false">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

            <TextView
                    android:id="@+id/tutorial_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutorial Progress:"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

            <TextView
                    android:id="@+id/tutorial_percentage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="12sp" />

        </LinearLayout>

        <ProgressBar
                android:id="@+id/tutorial_bar_on_right_nav_header"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/primary_medium_blue"
                android:backgroundTint="@color/light_gray" />
    </LinearLayout>

</RelativeLayout>