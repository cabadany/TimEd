<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- White background -->
    <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

    <!-- Top wave -->
    <ImageView
            android:id="@+id/top_wave_animation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wave_max_height"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:src="@drawable/animated_wave_top" />

    <!-- Back Button -->
    <ImageView
            android:id="@+id/icon_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/space_xs"
            android:layout_marginTop="@dimen/space_xs"
            android:padding="@dimen/space_sm"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Back"
            app:srcCompat="@drawable/ic_back_button"
            android:background="@drawable/ripple_icon_back_button"
            android:stateListAnimator="@animator/button_scale_animator" />

    <!-- Title -->
    <TextView
            android:id="@+id/edit_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_2xl"
            android:fontFamily="@font/league_spartan_bold"
            android:letterSpacing="0.05"
            android:padding="@dimen/space_md"
            android:shadowColor="#33000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Edit Profile"
            android:textColor="@color/primary_deep_blue"
            android:textSize="@dimen/text_display"
            android:textStyle="bold" />

    <!-- Profile Image with Edit Icon -->
    <FrameLayout
            android:id="@+id/profile_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_profile_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_xl">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/profile_avatar_size"
                android:layout_height="@dimen/profile_avatar_size"
                android:src="@drawable/profile_placeholder"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

        <ImageView
                android:id="@+id/edit_profile_pic_button"
                android:layout_width="@dimen/toolbar_icon_md"
                android:layout_height="@dimen/toolbar_icon_md"
                android:layout_gravity="bottom|end"
                android:background="@drawable/edit_profile_circle_yellow"
                android:padding="@dimen/space_xs"
                android:src="@drawable/ic_edit"
                android:clickable="true"
                android:focusable="true" />
    </FrameLayout>

    <!-- Teacher ID - Non-editable -->
    <TextView
            android:id="@+id/teacher_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_lg"
            android:fontFamily="@font/roboto_medium"
            android:text=""
            tools:text="ID: 1746"
            android:textColor="@color/black"
            android:textSize="@dimen/text_md" />

    <!-- Form Fields in ScrollView -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/teacher_id_label"
            android:layout_above="@id/btn_update_profile"
            android:layout_marginTop="@dimen/space_xl"
            android:layout_marginBottom="@dimen/space_md"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/space_xl">

            <!-- Name Field -->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_lg"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/brand_indigo"
                    app:hintTextColor="@color/brand_indigo">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="Full Name"
                        android:inputType="textPersonName"
                        android:text=""
                        tools:text="Kristan Ian D. CabaÃ±a"
                        android:paddingStart="@dimen/space_lg"
                        android:paddingEnd="@dimen/space_lg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_md" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email Field -->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_lg"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/brand_indigo"
                    app:hintTextColor="@color/brand_indigo">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress"
                        android:text=""
                        tools:text="kristanian.cabana@cit.edu"
                        android:paddingStart="@dimen/space_lg"
                        android:paddingEnd="@dimen/space_lg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_md" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone Number Field -->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_lg"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/brand_indigo"
                    app:hintTextColor="@color/brand_indigo">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:text=""
                        tools:text="0912 345 6789"
                        android:paddingStart="@dimen/space_lg"
                        android:paddingEnd="@dimen/space_lg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_md" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Department Field -->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/department_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_lg"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/brand_indigo"
                    app:hintTextColor="@color/brand_indigo">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/department_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="Department"
                        android:inputType="text"
                        android:text=""
                        tools:text="College of Computer Science"
                        android:paddingStart="@dimen/space_lg"
                        android:paddingEnd="@dimen/space_lg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_md" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Update Profile Button -->
    <Button
            android:id="@+id/btn_update_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_min_height"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/space_xl"
            android:layout_marginEnd="@dimen/space_xl"
            android:layout_marginBottom="@dimen/space_xl"
            android:backgroundTint="@color/brand_indigo"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Update Profile"
            android:textColor="@color/white"
            android:textSize="@dimen/text_md"
            android:textStyle="bold"
            app:cornerRadius="@dimen/button_corner_radius" />
</RelativeLayout>