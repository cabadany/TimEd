<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />
    <uses-feature android:name="android.hardware.camera.rear" android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Rest of your manifest -->

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Light.NoActionBar"
        tools:targetApi="26">

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/login_page"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Home Page Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:label="@string/home_page"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Time In Page Activity -->
        <activity
            android:name=".TimeInActivity"
            android:exported="false"
            android:label="@string/time_in_page"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Profile Page Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/profile_page"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Schedule Page Activity -->
        <activity
            android:name=".ScheduleActivity"
            android:exported="false"
            android:label="@string/schedule_page"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Change Password Page Activity -->
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false"
            android:label="@string/change_password_page"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Edit Profile Page Activity -->
        <activity
            android:name=".EditProfileActivity"
            android:exported="false"
            android:label="@string/edit_profile_page"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Excuse Letter Page Activity -->
        <activity
                android:name=".ExcuseLetterActivity"
                android:exported="false"
                android:label="@string/excuse_letter_page"
                android:windowSoftInputMode="adjustResize">
            <meta-data
                    android:name="android.app.lib_name"
                    android:value="" />
        </activity>



    </application>

</manifest>